# ============================================================================
# HOMEOS ENVIRONMENT CONFIGURATION
# ============================================================================

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Database Configuration (PostgreSQL - Primary)
DATABASE_URL=postgresql://homeos:homeos@localhost:5432/homeos
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=homeos
POSTGRES_USER=homeos
POSTGRES_PASSWORD=homeos

# SQLite Configuration (Fallback for offline operation)
SQLITE_PATH=./data/homeos.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Weather API Configuration
WEATHER_API_KEY=your-openweathermap-api-key
WEATHER_UPDATE_INTERVAL=300000

# Email Configuration
EMAIL_MONITORING_ENABLED=true
EMAIL_CHECK_INTERVAL=60000

# Gmail Configuration
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# Outlook Configuration
OUTLOOK_USER=your-email@outlook.com
OUTLOOK_PASSWORD=your-outlook-password

# Generator Modbus Configuration
GENERATOR_ENABLED=true
GENERATOR_MODBUS_HOST=192.168.1.100
GENERATOR_MODBUS_PORT=502
GENERATOR_MODBUS_UNIT_ID=1
GENERATOR_POLL_INTERVAL=1000

# TP-Link ER605 Router Configuration
ROUTER_ENABLED=true
ROUTER_HOST=192.168.1.1
ROUTER_USERNAME=admin
ROUTER_PASSWORD=your-router-admin-password
ROUTER_TIMEOUT=10000
ROUTER_POLL_INTERVAL=30000
NETWORK_SCAN_INTERVAL=60000
NETWORK_DEVICE_TIMEOUT=5000
NETWORK_BANDWIDTH_HISTORY_DAYS=7
SECURITY_LOG_RETENTION_DAYS=30
SECURITY_ALERT_THRESHOLD=5

# Energy Monitoring Configuration
ENERGY_ENABLED=true
EMPORIA_USERNAME=your-emporia-username
EMPORIA_PASSWORD=your-emporia-password
ENERGY_UPDATE_INTERVAL=30000

# Spotify Configuration
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# Location Configuration
LOCATION_LATITUDE=40.7128
LOCATION_LONGITUDE=-74.0060
LOCATION_CITY=New York
LOCATION_STATE=NY
LOCATION_COUNTRY=US
TIMEZONE=America/New_York

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/homeos.log

# Development Configuration
DEBUG=homeos:*
VITE_API_URL=http://localhost:3001/api
